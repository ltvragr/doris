- model_class = Lab
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:url)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @labs.each do |lab|
      %tr
        %td= link_to lab.id, lab_path(lab)
        %td= lab.name
        %td= lab.url
        %td= lab.description
        %td=l lab.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_lab_path(lab), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), lab_path(lab), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_lab_path, :class => 'btn btn-primary'
