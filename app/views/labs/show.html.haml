- title @lab.name
- if @lab.is_authorized?
  %p
    %strong Principal Investigator:
    = render @lab.users.where("status like ?", "pi")
  %p
    %strong URL:
    %br
    = link_to @lab.url, @lab.url
  %p
    %strong Description:
    %br
    = @lab.description
  %p
    %strong Projects:
    = render @lab.projects
    = link_to 'New Project', new_project_path, class: :'btn', :lab_name => @lab.name


  .form-actions
    - if can? :edit, @lab
      = link_to 'Edit', edit_lab_path(@lab), :class => 'btn'
    - if can? :destroy, @lab   
      = link_to 'Destroy', lab_path(@lab), :method => "delete", :data => { :confirm => 'Are you sure?'}, :class => 'btn btn-danger'

- else
  - if can? :authorize_lab, @lab
    %p
      Dear PI, you must approve this lab
    = button_to 'Approve Lab', authorize_path
  - else
    %p
      Sorry, the PI must first approve this lab