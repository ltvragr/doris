.page-header
  %h1=@lab.name

%p
  %strong Name:
  %br
  = @lab.name
%p
  %strong URL:
  %br
  = link_to @lab.url, @lab.url
%p
  %strong Description:
  %br
  = @lab.description
%p
  %strong Users:
%p
  %strong Projects:
  = render @lab.projects


.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), labs_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_lab_path(@lab), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), lab_path(@lab), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
