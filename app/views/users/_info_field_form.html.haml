=form_tag do
  - info_field_categories(@fields).each do |c|
    %h4=c
    - get_fields_for_category(c, @fields).each do |f|
      .control-group
        = label_tag f.label, f.label, {:class => 'control-label'}
        .controls
          = text_field_tag f.label, f.content, :class => f.content_type
    %hr
  .form-actions
    = submit_tag nil, :class => 'btn btn-primary'


