- model_class = InfoField
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:associated_object)
      %th= model_class.human_attribute_name(:associated_role)
      %th= model_class.human_attribute_name(:label)
      %th= model_class.human_attribute_name(:content_type)
      %th= model_class.human_attribute_name(:content)
      %th= model_class.human_attribute_name(:sort_order)
      %th= model_class.human_attribute_name(:category)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @info_fields.each do |info_field|
      %tr
        %td= link_to info_field.id, info_field_path(info_field)
        %td= info_field.associated_object
        %td= info_field.associated_role
        %td= info_field.label
        %td= info_field.content_type
        %td= info_field.content
        %td= info_field.sort_order
        %td= info_field.category
        %td=l info_field.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_info_field_path(info_field), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), info_field_path(info_field), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_info_field_path, :class => 'btn btn-primary'
