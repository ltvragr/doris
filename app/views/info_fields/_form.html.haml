= form_for @info_field do |f|
  -if @info_field.errors.any?
    #error_explanation
      %h2= "#{pluralize(@info_field.errors.count, "error")} prohibited this info_field from being saved:"
      %ul
        - @info_field.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :associated_object
    = f.text_field :associated_object
  .field
    = f.label :associated_role
    = f.text_field :associated_role
  .field
    = f.label :label
    = f.text_field :label
  .field
    = f.label :content_type
    = f.text_field :content_type
  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :sort_order
    = f.number_field :sort_order
  .field
    = f.label :category
    = f.text_field :category
  .actions
    = f.submit 'Save'
